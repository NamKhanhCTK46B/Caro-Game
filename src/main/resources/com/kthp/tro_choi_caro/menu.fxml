<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" styleClass="menu-container" stylesheets="@css/menu.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kthp.tro_choi_caro.controller.MenuController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    
    <!-- Logo Container -->
    <VBox alignment="CENTER" spacing="10.0" styleClass="logo-container">
        <!-- Title -->
        <Label styleClass="menu-title" text="🎮 TRÒ CHƠI CARO">
            <font>
                <Font name="System Bold" size="56.0" />
            </font>
        </Label>
        
        <Label styleClass="menu-subtitle" text="⚔ Đấu với máy ⚔">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
    </VBox>
    
    <Region prefHeight="15.0" />
    
    <!-- Difficulty Selection -->
    <VBox alignment="CENTER" spacing="20.0" styleClass="difficulty-container">
        <Label styleClass="difficulty-label" text="🎯 Chọn độ khó 🎯">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        
        <VBox alignment="CENTER_LEFT" spacing="15.0" styleClass="radio-container">
            <RadioButton fx:id="easyRadio" styleClass="menu-radio, radio-easy" text="😊 Dễ (AI ngẫu nhiên)">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </RadioButton>
            
            <RadioButton fx:id="mediumRadio" styleClass="menu-radio, radio-medium" text="🤔 Trung Bình (AI phân tích)">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </RadioButton>
            
            <RadioButton fx:id="hardRadio" styleClass="menu-radio, radio-hard" text="🔥 Khó (AI thông minh)">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </RadioButton>
        </VBox>
    </VBox>
    
    <Region prefHeight="15.0" />
    
    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="startButton" onAction="#handleStartGame" styleClass="menu-button, btn-start" text="🚀 Bắt đầu chơi">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
        
        <Button onAction="#handleExit" styleClass="menu-button, btn-exit" text="🚪 Thoát">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </HBox>
    
    <Region prefHeight="15.0" />
    
    <!-- Info -->
    <VBox alignment="CENTER" spacing="8.0" styleClass="info-container">
        <Label styleClass="info-title" text="✨ Mẫu thiết kế được áp dụng ✨">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <Label styleClass="info-text" text="Strategy • Observer • Memento • MVC">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
    </VBox>
</VBox>
